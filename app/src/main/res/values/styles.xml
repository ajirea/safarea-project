<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorGray5</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColorTertiary">@color/colorGray3</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColorPrimary">@color/colorGray2</item>
    </style>

    <style name="input_text">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="input_text.password">
        <item name="android:ems">10</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>
