<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/transaction_view"
            android:layout_width="377dp"
            android:layout_height="214dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgProd"
            android:layout_width="101dp"
            android:layout_height="112dp"
            app:layout_constraintBottom_toBottomOf="@+id/transaction_view"
            app:layout_constraintEnd_toEndOf="@+id/transaction_view"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toStartOf="@+id/transaction_view"
            app:layout_constraintTop_toBottomOf="@+id/lblPemesan"
            app:layout_constraintVertical_bias="0.208"
            app:srcCompat="@drawable/sample_product" />

        <TextView
            android:id="@+id/txtTotPrice"
            android:layout_width="124dp"
            android:layout_height="22dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/transaction_view"
            app:layout_constraintEnd_toEndOf="@+id/transaction_view" />

        <TextView
            android:id="@+id/lblPrice"
            android:layout_width="130dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Harga Satuan : "
            app:layout_constraintBottom_toTopOf="@+id/lblTotPrice"
            app:layout_constraintStart_toEndOf="@+id/imgProd"
            app:layout_constraintTop_toBottomOf="@+id/lblDate"
            app:layout_constraintVertical_bias="0.41000003" />

        <TextView
            android:id="@+id/lblProduct"
            android:layout_width="114dp"
            android:layout_height="24dp"
            android:layout_marginStart="108dp"
            android:layout_marginLeft="108dp"
            android:layout_marginBottom="132dp"
            android:text="Produk : "
            app:layout_constraintBottom_toBottomOf="@+id/transaction_view"
            app:layout_constraintStart_toStartOf="@+id/imgProd" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="114dp"
            android:layout_height="21dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imgProd"
            app:layout_constraintTop_toBottomOf="@+id/txtProduct" />

        <TextView
            android:id="@+id/lblDate"
            android:layout_width="119dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Dipesan Pada : "
            app:layout_constraintStart_toEndOf="@+id/imgProd"
            app:layout_constraintTop_toBottomOf="@+id/lblQty" />

        <TextView
            android:id="@+id/txtPemesan"
            android:layout_width="163dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/btnDetails"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/lblPemesan"
            app:layout_constraintTop_toTopOf="@+id/transaction_view" />

        <TextView
            android:id="@+id/txtQty"
            android:layout_width="67dp"
            android:layout_height="19dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="144dp"
            android:layout_marginRight="144dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/transaction_view"
            app:layout_constraintTop_toTopOf="@+id/transaction_view" />

        <TextView
            android:id="@+id/lblPemesan"
            android:layout_width="134dp"
            android:layout_height="37dp"
            android:text="Nama Pemesan : "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/transaction_view"
            app:layout_constraintEnd_toEndOf="@+id/transaction_view"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="@+id/transaction_view"
            app:layout_constraintTop_toTopOf="@+id/transaction_view"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/lblTotPrice"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:text="Total Harga : "
            app:layout_constraintBottom_toBottomOf="@+id/transaction_view"
            app:layout_constraintStart_toEndOf="@+id/imgProd"
            app:layout_constraintTop_toBottomOf="@+id/lblDate"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="118dp"
            android:layout_height="26dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/txtTotPrice"
            app:layout_constraintEnd_toEndOf="@+id/transaction_view" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnDetails"
            android:layout_width="254dp"
            android:layout_height="52dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="160dp"
            android:background="?attr/colorBackgroundFloating"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/transaction_view"
            app:layout_constraintEnd_toEndOf="@+id/transaction_view"
            app:srcCompat="@drawable/ic_edit_gray_17dp" />

        <TextView
            android:id="@+id/lblQty"
            android:layout_width="68dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:text="Qty :"
            app:layout_constraintEnd_toEndOf="@+id/transaction_view"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toEndOf="@+id/imgProd"
            app:layout_constraintTop_toBottomOf="@+id/lblProduct" />

        <TextView
            android:id="@+id/txtProduct"
            android:layout_width="129dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/transaction_view"
            app:layout_constraintTop_toBottomOf="@+id/txtPemesan" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>