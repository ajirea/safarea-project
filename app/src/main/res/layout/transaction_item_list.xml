<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/transaction_view"
        android:layout_width="377dp"
        android:layout_height="214dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imgProd"
        android:layout_width="101dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_view"
        app:layout_constraintEnd_toEndOf="@+id/transaction_view"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="@+id/transaction_view"
        app:layout_constraintTop_toBottomOf="@+id/txtPemesan"
        app:layout_constraintVertical_bias="0.208"
        app:srcCompat="@drawable/sample_product" />

    <TextView
        android:id="@+id/txtPemesan"
        android:layout_width="134dp"
        android:layout_height="37dp"
        android:text="Nama Pemesan : "
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_view"
        app:layout_constraintEnd_toEndOf="@+id/transaction_view"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="@+id/transaction_view"
        app:layout_constraintTop_toTopOf="@+id/transaction_view"
        app:layout_constraintVertical_bias="0.05" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDetails"
        android:layout_width="254dp"
        android:layout_height="52dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="160dp"
        android:background="?attr/colorBackgroundFloating"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_view"
        app:layout_constraintEnd_toEndOf="@+id/transaction_view"
        app:srcCompat="@drawable/ic_edit_gray_17dp" />

    <TextView
        android:id="@+id/txtProduct"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:text="Product Name"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_view"
        app:layout_constraintEnd_toEndOf="@+id/transaction_view"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toEndOf="@+id/imgProd"
        app:layout_constraintTop_toTopOf="@+id/transaction_view"
        app:layout_constraintVertical_bias="0.349" />

    <TextView
        android:id="@+id/txtQty"
        android:layout_width="68dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:text="Qty :"
        app:layout_constraintEnd_toEndOf="@+id/transaction_view"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toEndOf="@+id/imgProd"
        app:layout_constraintTop_toBottomOf="@+id/txtProduct" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="221dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:text="Total Price : "
        app:layout_constraintBottom_toBottomOf="@+id/transaction_view"
        app:layout_constraintStart_toEndOf="@+id/imgProd"
        app:layout_constraintTop_toBottomOf="@+id/txtDate"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="216dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:text="Dipesan Pada : "
        app:layout_constraintEnd_toEndOf="@+id/transaction_view"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toEndOf="@+id/imgProd"
        app:layout_constraintTop_toBottomOf="@+id/txtQty" />


</androidx.constraintlayout.widget.ConstraintLayout>