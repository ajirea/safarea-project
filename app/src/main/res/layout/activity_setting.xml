<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <include
        layout="@layout/toolbar_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp">

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:id="@+id/roundKornerFrameLayout"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_marginTop="24dp"
                app:corner_radius="105dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageAvatar"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:src="@drawable/ic_launcher_background"/>

            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/btn_circle_primary"
                app:layout_constraintBottom_toBottomOf="@+id/roundKornerFrameLayout"
                app:layout_constraintEnd_toEndOf="@+id/roundKornerFrameLayout"
                app:layout_constraintTop_toTopOf="@+id/roundKornerFrameLayout"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/ic_add_white_24dp" />

            <EditText
                android:id="@+id/fieldName"
                style="@style/input_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roundKornerFrameLayout"
                tools:text="test" />

            <TextView
                android:id="@+id/labelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/field_text_name"
                app:layout_constraintBottom_toTopOf="@+id/fieldName"
                app:layout_constraintStart_toStartOf="@+id/fieldName"
                style="@style/label" />

            <EditText
                android:id="@+id/fieldUsername"
                style="@style/input_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fieldName"
                tools:text="test" />

            <TextView
                android:id="@+id/labelUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pengguna"
                app:layout_constraintBottom_toTopOf="@+id/fieldUsername"
                app:layout_constraintStart_toStartOf="@+id/fieldUsername"
                style="@style/label" />

            <EditText
                android:id="@+id/fieldEmail"
                style="@style/input_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fieldUsername"
                tools:text="test" />

            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Email"
                app:layout_constraintBottom_toTopOf="@+id/fieldEmail"
                app:layout_constraintStart_toStartOf="@+id/fieldEmail"
                style="@style/label" />

            <EditText
                android:id="@+id/fieldPhone"
                style="@style/input_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fieldEmail"
                tools:text="test" />

            <TextView
                android:id="@+id/labelPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon"
                app:layout_constraintBottom_toTopOf="@+id/fieldPhone"
                app:layout_constraintStart_toStartOf="@+id/fieldPhone"
                style="@style/label" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/colorGray5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fieldPhone" />

            <TextView
                android:id="@+id/btnChangeAddress"
                style="@style/btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ubah Alamat"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <TextView
                android:id="@+id/btnChangePassword"
                style="@style/btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ubah Kata Sandi"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toBottomOf="@+id/btnChangeAddress" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="25dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>